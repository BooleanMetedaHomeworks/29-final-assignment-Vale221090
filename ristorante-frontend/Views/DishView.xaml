<Page x:Class="ristorante_frontend.Views.DishesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1160"
      Background="#F5F6FA">

    <Page.Resources>
        <Style x:Key="ListViewStyle" TargetType="ListView">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style x:Key="ContentBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Lista Piatti -->
        <Border Grid.Column="0" 
                Style="{StaticResource ContentBorder}">
            <DockPanel>
                <Grid DockPanel.Dock="Top" Margin="0,0,0,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Piatti Disponibili" 
                             FontSize="24" 
                             FontWeight="Bold"
                             Foreground="#1976D2"/>

                    <Button Grid.Column="1"
                            Content="Nuovo Piatto" 
                            Style="{StaticResource NavigationButton}"
                            Click="OnAddDishClick"/>

                    <TextBox Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Margin="0,10,0,0"
                            Padding="8"
                            BorderThickness="1"
                            BorderBrush="#E0E0E0"
                            TextChanged="OnSearchTextChanged">
                        <TextBox.Resources>
                            <VisualBrush x:Key="HintText" TileMode="None" Opacity="0.5" Stretch="None" AlignmentX="Left">
                                <VisualBrush.Visual>
                                    <TextBlock Text="Cerca piatto..." FontStyle="Italic"/>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </TextBox.Resources>
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background" Value="{StaticResource HintText}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Grid>

                <ListView Style="{StaticResource ListViewStyle}"
                         x:Name="DishesList">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="{Binding Nome}" 
                                             FontSize="16"
                                             FontWeight="SemiBold"/>
                                    <StackPanel Orientation="Horizontal"
                                              Margin="0,4,0,0">
                                        <Border Background="#E3F2FD"
                                                Padding="6,2"
                                                CornerRadius="4">
                                            <TextBlock Text="{Binding Categoria}"
                                                     Foreground="#1976D2"/>
                                        </Border>
                                        <TextBlock Margin="12,0"
                                                 VerticalAlignment="Center">
                                            <Run Text="€"/>
                                            <Run Text="{Binding Prezzo, StringFormat=N2}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" 
                                          Orientation="Horizontal">
                                    <Button Style="{StaticResource NavigationButton}"
                                            Background="#FFA726"
                                            Margin="4,0"
                                            Click="OnEditDishClick">
                                        <TextBlock Text="Modifica"/>
                                    </Button>
                                    <Button Style="{StaticResource NavigationButton}"
                                            Background="#F44336"
                                            Click="OnDeleteDishClick">
                                        <TextBlock Text="Elimina"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DockPanel>
        </Border>

        <!-- Pulsanti di Spostamento -->
        <StackPanel Grid.Column="1" 
                    Margin="10,0" 
                    VerticalAlignment="Center">
            <Button Content="→" 
                    Style="{StaticResource NavigationButton}"
                    Click="OnMoveToCategory"/>
            <Button Content="←"
                    Style="{StaticResource NavigationButton}"
                    Margin="0,10,0,0"
                    Background="#F44336"
                    Click="OnRemoveFromCategory"/>
        </StackPanel>

        <!-- Categorie -->
        <Border Grid.Column="2" 
                Style="{StaticResource ContentBorder}">
            <DockPanel>
                <TextBlock Text="Categorie" 
                          FontSize="24" 
                          FontWeight="Bold"
                          Foreground="#1976D2"
                          DockPanel.Dock="Top"
                          Margin="0,0,0,15"/>

                <ListView Style="{StaticResource ListViewStyle}"
                         x:Name="CategoriesList">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Nome}" 
                                         FontSize="16" 
                                         VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="1"
                                         Text="{Binding NumeroPiatti}"
                                         Foreground="#666666"
                                         Margin="8,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DockPanel>
        </Border>
    </Grid>
</Page>
