<Page x:Class="ristorante_frontend.ViewModels.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="LoginPage"
      Background="#F5F6FA">

    <Page.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ModerPasswordBox" TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Border Width="400"
                Background="White"
                CornerRadius="8"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Login"
                           FontSize="29"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"
                           Foreground="#1976D2"/>
                <TextBlock Text="Email"
                           Margin="0,0,0,5"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#616161"/>
                <TextBox x:Name="EmailTxt"
                         Style="{StaticResource ModernTextBox}"/>
                <TextBlock Text="Password"
                           Margin="0,0,0,5"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#616161"/>
                <PasswordBox x:Name="PasswordTxt"
                             Style="{StaticResource ModerPasswordBox}"
                             Margin="0,0,0,30"/>
                <Button Content="Login"
                        Style="{StaticResource ModernButton}"
                        Click="OnLoginBtnClick"
                        Background="#4CAF50" 
                        Margin="0,0,0,15"/>
                <TextBlock Text="Password dimenticata?"
                           Margin="0,20,0,0"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#2196F3"
                           HorizontalAlignment="Center"
                           Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
